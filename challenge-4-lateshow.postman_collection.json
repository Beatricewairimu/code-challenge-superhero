    "name": "Heroes API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Episodes",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{url}}/episodes",
          "host": ["{{url}}"],
          "path": ["episodes"]
        }
      }
    },
    {
      "name": "Get Episode by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{url}}/episodes/:id",
          "host": ["{{url}}"],
          "path": ["episodes", ":id"]
        }
      }
    },
    {
      "name": "Get Guests",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{url}}/guests",
          "host": ["{{url}}"],
          "path": ["guests"]
        }
      }
    },
    {
      "name": "Create Appearance",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\"rating\": 5, \"episode_id\": 1, \"guest_id\": 1}"
        },
        "url": {
          "raw": "{{url}}/appearances",
          "host": ["{{url}}"],
          "path": ["appearances"]
        }
      }
    }
  ]
